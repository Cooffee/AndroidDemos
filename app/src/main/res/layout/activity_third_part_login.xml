<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cooffee.myapplication.thirdpartlogin.ThirdPartLoginActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_qq"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:padding="@dimen/margin_padding_default"
            android:layout_weight="1"
            android:src="@drawable/ic_qq"/>

        <ImageView
            android:id="@+id/img_wechat"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:padding="@dimen/margin_padding_default"
            android:layout_weight="1"
            android:src="@drawable/ic_wechat"/>

        <ImageView
            android:id="@+id/img_sina"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:padding="@dimen/margin_padding_default"
            android:layout_weight="1"
            android:src="@drawable/ic_sina"/>
    </LinearLayout>
</LinearLayout>
